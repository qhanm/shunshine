
@{
    ViewData["Title"] = "Shunshine - Login Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V19</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/favicon.ico" />
    <link href="~/admin/dashboard/vendor/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/admin/css/style_login.css" rel="stylesheet" />
    <link href="~/admin/css/custom.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/admin/images/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" id="frmLogin" method="post">
                <span id="reauth-email" class="reauth-email"></span>
                <p class="shunshine-invalid" id="login-vaild"></p>
                <input type="text" id="txtUsername" name="UserName" class="form-control" placeholder="UserName">
                @*<p style="color:red" class="error errorUserName" id="errorUserName"></p>*@
                <input type="password" id="txtPassword" name="Password" class="form-control" placeholder="Password">
              
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me" name="RememberMe"> Remember me
                    </label>
                </div>

                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" id="btnLogin">Sign in</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
    <script src="~/admin/dashboard/vendor/jquery/dist/jquery.js"></script>
    <script src="~/admin/dashboard/vendor/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/admin/dashboard/vendor/jquery-validation-1.19.1/dist/jquery.validate.js"></script>
    <script src="~/admin/dashboard/vendor/jquery-validation-1.19.1/dist/additional-methods.js"></script>

    <script src="~/admin/dashboard/vendor/jquery-validation-1.19.1/dist/localization/messages_vi.js"></script>
    <script src="~/app/shrared/shunshine.js"></script>
    <script src="~/app/controllers/login/index.js"></script>

    <script>
        //console.log("@Url.Action("Authen", "Login", new { Area = "Admin" })");
        var logincontroller = new LoginController(
            "@Url.Action("Authen", "Login", new { Area = "admin" })",
             "@Url.Action("Index", "Home", new { Area = "admin" })"
        );
        logincontroller.initial();
    </script>
</body>
</html>

